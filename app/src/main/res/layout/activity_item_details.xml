<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".ItemDetails">

    <View
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/back"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="22dp"
        android:layout_marginStart="5dp"/>

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/orange_circle"
        android:layout_marginTop="358dp"
        android:layout_marginStart="170dp"
        android:elevation="1dp"/>

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dark_grey_circle"
        android:layout_marginTop="358dp"
        android:layout_marginStart="190dp"
        android:elevation="1dp"/>

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dark_grey_circle"
        android:layout_marginTop="358dp"
        android:layout_marginStart="210dp"
        android:elevation="1dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/item_image"
        android:background="@drawable/item_grey_rectangle"
        android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rate"
        android:text="$12"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="390dp"
        android:layout_marginStart="15dp"
        android:textColor="#EF8305"/>
    <TextView
        android:id="@+id/rprt_btn_sc11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="335dp"
        android:textColor="#EF8305"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/hr"
        android:textSize="22dp"
        android:layout_marginTop="392dp"
        android:layout_marginStart="57dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the Item comes Here"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:text="Islamabad"
        android:textSize="16dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="7th Mar, 2023"
        android:textSize="16dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="290dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:text="Lorem ipsum dolor sit amet, consectetur
adipiscing elit. "
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="485dp"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:text="Add review"
        android:textSize="18dp"
        android:padding="7dp"
        android:id="@+id/buttonAddReview"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="540dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background_orange"
        android:elevation="4dp"/>
    <EditText
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="540dp"
        android:id="@+id/edittextreview"
        android:hint="Add you review here"
        android:background="@drawable/item_grey_rectangle"
        android:visibility="gone"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="Upload >>"
        android:layout_marginTop="590dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:textColor="#FFF"
        android:id="@+id/buttonUpload"
        android:background="@drawable/button_background_orange"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:id="@+id/reviews"
        android:textSize="18dp"
        android:layout_marginTop="590dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:text="Rent it"
        android:textSize="18dp"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="650dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background_orange"
        android:elevation="4dp"/>

</RelativeLayout>